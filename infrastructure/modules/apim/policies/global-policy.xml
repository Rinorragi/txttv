<!--
    Global APIM Policy for TXT TV
    
    This policy applies to all operations and includes:
    - Request logging with correlation IDs
    - CORS configuration
    - Security headers
    - Error handling
-->
<policies>
    <inbound>
        <base />
        
        <!-- Generate and set correlation ID for tracing -->
        <set-variable name="correlationId" value="@(context.RequestId.ToString())" />
        <set-header name="X-Correlation-ID" exists-action="override">
            <value>@((string)context.Variables["correlationId"])</value>
        </set-header>
        
        <!-- CORS configuration for browser requests -->
        <cors allow-credentials="false">
            <allowed-origins>
                <origin>*</origin>
            </allowed-origins>
            <allowed-methods>
                <method>GET</method>
                <method>OPTIONS</method>
            </allowed-methods>
            <allowed-headers>
                <header>*</header>
            </allowed-headers>
        </cors>
        
        <!-- Log incoming request -->
        <trace source="TxtTV-Global" severity="information">
            <message>@($"Incoming request: {context.Request.Method} {context.Request.Url.Path}")</message>
            <metadata name="correlationId" value="@((string)context.Variables["correlationId"])" />
            <metadata name="clientIp" value="@(context.Request.IpAddress)" />
        </trace>
    </inbound>
    
    <backend>
        <base />
    </backend>
    
    <outbound>
        <base />
        
        <!-- Security headers -->
        <set-header name="X-Content-Type-Options" exists-action="override">
            <value>nosniff</value>
        </set-header>
        <set-header name="X-Frame-Options" exists-action="override">
            <value>DENY</value>
        </set-header>
        <set-header name="X-XSS-Protection" exists-action="override">
            <value>1; mode=block</value>
        </set-header>
        <set-header name="Referrer-Policy" exists-action="override">
            <value>strict-origin-when-cross-origin</value>
        </set-header>
        
        <!-- Ensure correlation ID is in response -->
        <set-header name="X-Correlation-ID" exists-action="skip">
            <value>@((string)context.Variables["correlationId"])</value>
        </set-header>
        
        <!-- Log outgoing response -->
        <trace source="TxtTV-Global" severity="information">
            <message>@($"Outgoing response: {context.Response.StatusCode}")</message>
            <metadata name="correlationId" value="@((string)context.Variables["correlationId"])" />
            <metadata name="responseTime" value="@(context.Elapsed.TotalMilliseconds.ToString())" />
        </trace>
    </outbound>
    
    <on-error>
        <base />
        
        <!-- Log errors -->
        <trace source="TxtTV-Global" severity="error">
            <message>@($"Error: {context.LastError.Message}")</message>
            <metadata name="correlationId" value="@((string)context.Variables.GetValueOrDefault("correlationId", context.RequestId.ToString()))" />
            <metadata name="errorReason" value="@(context.LastError.Reason)" />
        </trace>
        
        <!-- Return generic error response for unhandled errors -->
        <choose>
            <when condition="@(context.Response == null)">
                <return-response>
                    <set-status code="500" reason="Internal Server Error" />
                    <set-header name="Content-Type" exists-action="override">
                        <value>text/html; charset=utf-8</value>
                    </set-header>
                    <set-body><![CDATA[<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <title>TXT TV - Error</title>
    <style>
        body { background-color: #000; color: #f00; font-family: 'Courier New', monospace; padding: 20px; }
        h1 { color: #ff0; }
        a { color: #0ff; }
    </style>
</head>
<body>
    <h1>SERVICE ERROR</h1>
    <pre>An unexpected error occurred.

Please try again later or return to the home page.</pre>
    <p><a href="/page/100">Go to Page 100</a></p>
</body>
</html>]]></set-body>
                </return-response>
            </when>
        </choose>
    </on-error>
</policies>
